root = false

# Project-wide: ignore MA0165 (false positives on plain literals)
[*.cs]
dotnet_diagnostic.MA0165.severity = none
# dotnet_diagnostic.IDE0010.severity = warning
dotnet_analyzer_diagnostic.category-Style.severity = warning

# Var usage compromise: use 'var' when the type is apparent or built-in; explicit type elsewhere
csharp_style_var_for_built_in_types = true:suggestion
csharp_style_var_when_type_is_apparent = true:suggestion
csharp_style_var_elsewhere = false:suggestion

# Using directive placement: prefer outside namespace
csharp_using_directive_placement = outside_namespace:suggestion

[**/*.cshtml.cs]
dotnet_diagnostic.MA0048.severity = none
dotnet_analyzer_diagnostic.severity = warning
