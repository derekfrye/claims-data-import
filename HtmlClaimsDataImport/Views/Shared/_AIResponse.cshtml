@model HtmlClaimsDataImport.Application.Queries.Dtos.AIResponseDto

<div class="ai-response-container">
    @if (Model.IsSimulated)
    {
        <div class="alert alert-info" role="alert">
            Running in simulated mode (no API key detected). Showing generated example.
        </div>
    }
    <div class="ai-response-content">
        <pre class="ai-response-pre">@Model.ResponseText</pre>
    </div>
</div>

<style>
    .ai-response-container { margin-top: 0.75em; border: 0.0625em solid #e9ecef; border-radius: 0.375em; background: #fff; }
    .ai-response-content { padding: 0.625em; }
    .ai-response-pre { white-space: pre-wrap; font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, 'Liberation Mono', 'Courier New', monospace; font-size: 0.75em; margin: 0; }
    .alert { padding: 0.5em 0.625em; margin: 0; border-bottom: 0.0625em solid #e9ecef; background: #eef6ff; color: #084298; }
</style>

